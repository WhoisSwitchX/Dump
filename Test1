document.querySelector('.form-field select').addEventListener('change', function() {
    const role = this.value;

    const approvalLevel1 = document.querySelector('.field select[name="approvalLevel1"]');
    const approvalLevel2 = document.querySelector('.field select[name="approvalLevel2"]');

    // Clear existing options
    approvalLevel1.innerHTML = '<option value="Select">Select</option>';
    approvalLevel2.innerHTML = '<option value="Select">Select</option>';

    if (['prod_branch_checker', 'prod_branch_maker', 'prod_efpb_checker', 'prod_efpb_maker'].includes(role)) {
        // Populate Approval Level 1
        approvalLevel1.innerHTML += '<option value="Branch Manager / Cluster Head">Branch Manager / Cluster Head</option>';
        // Populate Approval Level 2
        approvalLevel2.innerHTML += '<option value="Allwyn Dsouza / Mithun Menon / Tushar Kulkarni">Allwyn Dsouza / Mithun Menon / Tushar Kulkarni</option>';
    } else if (['itam_checker', 'itam_maker'].includes(role)) {
        // Populate Approval Level 1
        approvalLevel1.innerHTML += '<option value="Line Manager / Reporting Head">Line Manager / Reporting Head</option>';
        // Populate Approval Level 2
        approvalLevel2.innerHTML += '<option value="UAM Head">UAM Head</option>';
    } else if (['report_view', 'cen_sup'].includes(role)) {
        // Populate Approval Level 1
        approvalLevel1.innerHTML += '<option value="Line Manager / Reporting Head">Line Manager / Reporting Head</option>';
        // Populate Approval Level 2
        approvalLevel2.innerHTML += '<option value="Sachin Chavan / Jagannath Prasad">Sachin Chavan / Jagannath Prasad</option>';
    }
});